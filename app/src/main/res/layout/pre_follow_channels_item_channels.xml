<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_channels_pre_follow"

    android:layout_marginBottom="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_14sdp"
        android:paddingTop="@dimen/_16sdp"
        android:paddingEnd="@dimen/_14sdp"
        android:outlineAmbientShadowColor="#d2deea"
        android:paddingBottom="@dimen/_16sdp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/pre_follow_item_card_avata"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_46sdp"
            app:cardCornerRadius="@dimen/_23sdp"
            app:cardElevation="@dimen/_1sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/pre_follow_item_image"
                android:src="@drawable/avata_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pre_follow_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:lineHeight="@dimen/_18sdp"
            android:typeface="serif"
            android:textColor="#506171"
            android:lineSpacingExtra="3sp"
            android:text="Diego Guadalupe"
            android:gravity="left"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@id/pre_follow_item_card_avata"
            app:layout_constraintStart_toEndOf="@id/pre_follow_item_card_avata"
            app:layout_constraintEnd_toStartOf="@id/pre_follow_item_cardview"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/pre_follow_item_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#667b90"
            android:lineSpacingExtra="5sp"
            android:lineHeight="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="@id/pre_follow_item_name"
            app:layout_constraintTop_toBottomOf="@id/pre_follow_item_name"
            app:layout_constraintEnd_toStartOf="@id/pre_follow_item_cardview"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="Suspendisse potenti. Aliquaâ€¦"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/pre_follow_item_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#e3eaf2"
            app:cardElevation="0dp"
            android:outlineAmbientShadowColor="#d2deea"
            app:cardCornerRadius="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/pre_follow_item_regis_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#415263"
                android:padding="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:text="Siguiendo"
                />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>